<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPeopleActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Добавление сотрудника"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_pers_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Имя"
        android:fontFamily="@font/ubuntu_medium"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edit_pers_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Фамиилия"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_pers_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_pers_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_pers_name" />

    <EditText
        android:id="@+id/edit_pers_EmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_medium"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_pers_patronymic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_pers_patronymic"
        app:layout_constraintTop_toBottomOf="@+id/edit_pers_patronymic" />

    <EditText
        android:id="@+id/edit_pers_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_medium"
        android:ems="10"
        android:hint="Password"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_pers_EmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_pers_EmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/edit_pers_EmailAddress" />

    <Button
        android:id="@+id/pers_button"
        android:layout_width="199dp"
        android:layout_height="53dp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="60dp"
        android:backgroundTint="#E0C71E"
        android:text="Добавить"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editSalaryValue"
        app:layout_constraintStart_toStartOf="@+id/editSalaryValue"
        app:layout_constraintTop_toBottomOf="@+id/editSalaryValue" />

    <EditText
        android:id="@+id/edit_pers_patronymic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Отчество"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_pers_surname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_pers_surname"
        app:layout_constraintTop_toBottomOf="@+id/edit_pers_surname" />

    <EditText
        android:id="@+id/editJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_medium"
        android:inputType="text"
        android:hint="Дожность"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_pers_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_pers_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_pers_password" />

    <EditText
        android:id="@+id/editSalaryValue"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Величина заработной платы"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_spinnerST"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_spinnerST"
        app:layout_constraintTop_toBottomOf="@+id/edit_spinnerST" />

    <Spinner
        android:id="@+id/edit_spinnerST"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/editJob"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editJob"
        app:layout_constraintTop_toBottomOf="@+id/editJob" />




</androidx.constraintlayout.widget.ConstraintLayout>